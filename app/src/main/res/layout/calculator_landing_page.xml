                    android:layout_height="75dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/CP1Green"
                    android:onClick="enterCases"
                    android:text="Case 1"
                    android:textColor="@color/CP1Beige" />

